<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/psycompute_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:text="数据信息"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/psycompute_descrp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="60dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/psycompute_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:textColor="#000000"
            android:textSize="20sp" />
    </ScrollView>

    <Button
        android:id="@+id/psycompute_btnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/psycompute_descrp"
        android:layout_marginRight="50dp"
        android:text="下一步" />

    <Button
        android:id="@+id/psycompute_btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/psycompute_descrp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:text="上一步" />
 
</RelativeLayout>